@model LogInViewModel
@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.error
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center mb-4">Log In Formulario</h2>
        <form asp-action="LogInFormulario" method="post" asp-controller="LogIn">
            <div class="form-group mb-3">
                <label for="UserName">Username</label>
                <input type="text" class="form-control" id="UserName" name="UserName" />
                @Html.ValidationMessageFor(modelo => modelo.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" />
                @Html.ValidationMessageFor(modelo => modelo.Password, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary w-100">Log In</button>
        </form>
    </div>
</div>


